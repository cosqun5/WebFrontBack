@model ServiceVM;

<div class="col-md-6 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">

			<form  method="post" class="forms-sample">
				<div class="form-group">
					<label asp-for="Services.Name"></label>
					<input asp-for="Services.Name" class="form-control" placeholder="Name">
				</div>
				<div class="form-group">
					<label asp-for="Services.Description"></label>
					<input asp-for="Services.Description" class="form-control" placeholder="Description">
				</div>
				<div class="form-group">
					<label asp-for="Services.Price"></label>
					<input asp-for="Services.Price" class="form-control" placeholder="Price">
				</div>
				<select style="width:150px; color:black" asp-for="Services.CategoryId" class="form-control">
					@foreach (Category category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<br />
				<br />
				<button type="submit" class="btn btn-primary me-2 text-light">Update</button>
				<button class="btn btn-light" asp-action="Index">Go back</button>

			</form>
		</div>
	</div>
</div>