@model List<Work>

@{
    ViewData["Title"] = "Work";
    int count = 1;
}

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success text-light" asp-area="Admin" asp-controller="Work" asp-action="Create">Create Member</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Number
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Image
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Work item in Model)
                        {
                            <tr>
                                <td> @count</td>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.WorkCategories.Name
                                </td>
                                <td>
                                    @item.CreatedAt
                                </td>
                                <td>
                                <td>
                                    <img src="~/assets/img/@item.WorkImages.FirstOrDefault(s=>s.IsActive).Path" style="height:100px; width:100px;"></img>

                                </td>
                                <td>
                                    <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="Work" asp-action="Update" asp-route-Id="@item.Id">
                                        <i class="mdi mdi-grease-pencil"></i>
                                    </a>
                                    <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="Work" asp-action="Delete" asp-route-Id="@item.Id">
                                        <i class="mdi mdi-delete-forever"></i>
                                    </a>
                                </td>
                            </tr>
                            count++;
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



