@model CreateServiceVM;

<div class="col-md-6 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">

			<form  method="post" class="forms-sample" >
			
				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" placeholder="Name">
					<span class="text text-danger" asp-validation-for="Name"></span>

				</div>
				<div class="form-group">
					<label asp-for="Description"></label>
					<input asp-for="Description" class="form-control" placeholder="Description">
					<span class="text text-danger" asp-validation-for="Description"></span>

				</div>
				<div class="form-group">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" placeholder="Price">
					<span class="text text-danger" asp-validation-for="Price"></span>

				</div>
				<select style="width:150px; color:black" asp-for="CategoryId" class="form-control">
					@foreach (Category category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
					<span class="text text-danger" asp-validation-for="Name"></span>

				</select>
				<br />
				<br />
				<button type="submit" class="btn btn-primary me-2 text-light">Update</button>
				<button class="btn btn-light" asp-action="Index">Go back</button>

			</form>
		</div>
	</div>
</div>